<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".BookingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo_rent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Choose your car "
                android:textSize="20dp"
                android:textColor="@color/purple_500"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:clickable="true"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="149dp"
                android:layout_height="157dp"
                android:layout_gravity="left"
                android:src="@drawable/avanza" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Avanza 2021. Spesifikasi: Kapasitas 6-7 Orang, AC dingin, Ban ada 5 (serep), include dongkrak. Harga: Rp600.000/24jam"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:clickable="true"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="149dp"
                android:layout_height="157dp"
                android:layout_gravity="left"
                android:src="@drawable/calya" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Calya 2020. Spesifikasi: Kapasitas 6-7 Orang, AC dingin, Ban ada 5 (serep), include dongkrak. Harga: Rp550.000/24jam"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:clickable="true"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="149dp"
                android:layout_height="157dp"
                android:layout_gravity="left"
                android:src="@drawable/agya" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Agya 2020. Spesifikasi: Kapasitas 4-5 Orang, AC dingin, Ban ada 5 (serep), include dongkrak. Harga: Rp500.000/24jam"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:clickable="true"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="149dp"
                android:layout_height="157dp"
                android:layout_gravity="left"
                android:src="@drawable/fortuner" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Fortuner 2019. Spesifikasi: Kapasitas 6-7 Orang, AC dingin, Ban ada 5 (serep), include dongkrak. Harga: Rp950.000/24jam"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:clickable="true"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="149dp"
                android:layout_height="157dp"
                android:layout_gravity="left"
                android:src="@drawable/mobilio" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Mobilio 2021. Spesifikasi: Kapasitas 6-7 Orang, AC dingin, Ban ada 5 (serep), include dongkrak. Harga: Rp650.000/24jam"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:clickable="true"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="149dp"
                android:layout_height="157dp"
                android:layout_gravity="left"
                android:src="@drawable/brio" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Brio 2020. Kapasitas 4-5 Orang, Spesifikasi: AC dingin, Ban ada 5 (serep), include dongkrak. Harga: Rp550.000/24jam"
                android:textColor="#000000" />

        </LinearLayout>
        <Button
            android:id="@+id/btn_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:text="Booking" />
    </LinearLayout>

</ScrollView>